{
  "name": "webgl2-shader-editor",
  "private": true,
  "version": "1.5.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "pnpm run gql-gen && pnpm exec vite build && pnpm run html-php-rename",
    "html-php-rename": "powershell -Command \"Move-Item dist/index.html dist/index.php\"",
    "preview": "vite preview",
    "gql-gen": "graphql-codegen --config scripts\\gql-gen.ts",
    "gql-gen:watch": "graphql-codegen --config scripts\\gql-gen.ts --watch",
    "format": "prettier --config .prettierrc -w \"./src/**/*.{vue,ts}\""
  },
  "dependencies": {
    "@primer/octicons": "^19.15.1",
    "@scure/base": "^1.2.4",
    "@shaderfrog/glsl-parser": "link:..\\..\\glsl-parser",
    "@tweakpane/core": "^1.1.9",
    "@urql/vue": "^1.4.2",
    "fflate": "^0.8.2",
    "graphql": "^16.10.0",
    "idb-keyval": "^6.2.1",
    "less": "^4.2.2",
    "lodash.debounce": "^4.0.8",
    "lodash.throttle": "^4.1.1",
    "monaco-editor": "0.52.2",
    "petite-vue-i18n": "11.1.1",
    "prettier": "^3.5.2",
    "prettier-plugin-glsl": "^0.2.0",
    "qr-creator": "^1.0.0",
    "tweakpane": "^3.1.10",
    "vue": "^3.5.13",
    "vue-macros": "3.0.0-beta.10"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "5.0.5",
    "@graphql-codegen/client-preset": "4.6.4",
    "@graphql-typed-document-node/core": "^3.2.0",
    "@intlify/unplugin-vue-i18n": "^2.0.0",
    "@prettier/plugin-pug": "^3.3.0",
    "@types/bun": "^1.2.22",
    "@types/html-minifier-terser": "^7.0.2",
    "@types/lodash.debounce": "^4.0.9",
    "@types/lodash.throttle": "^4.1.9",
    "@vitejs/plugin-vue": "^5.0.5",
    "@vue/language-plugin-pug": "^2.2.10",
    "autoprefixer": "^10.4.20",
    "dotenv": "^16.4.7",
    "html-minifier-terser": "^7.2.0",
    "lightningcss": "^1.29.1",
    "postcss-size": "^5.0.0",
    "pug": "^3.0.3",
    "rollup-plugin-visualizer": "^5.14.0",
    "sitemap": "^7.1.1",
    "tinyglobby": "0.2.15",
    "typescript": "^5.7.3",
    "vite": "^6.3.3",
    "vite-plugin-inspect": "^11.0.1",
    "vite-plugin-pwa": "^0.21.1",
    "vite-plugin-ssr": "^0.4.142",
    "vite-plugin-vue-css-modules": "^4.0.1",
    "vue-tsc": "^2.2.4",
    "workbox-window": "^7.3.0",
    "yaml": "^2.8.1"
  },
  "pnpm": {
    "patchedDependencies": {
      "prettier-plugin-glsl": "patches/prettier-plugin-glsl.patch",
      "monaco-editor": "patches/monaco-editor.patch"
    },
    "overrides": {
      "@shaderfrog/glsl-parser": "link:..\\..\\glsl-parser"
    }
  }
